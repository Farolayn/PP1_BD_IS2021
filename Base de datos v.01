create database AtiDex

use AtiDex

create table pokemon(
identificador varchar(100),
Nombre varchar(100),
Tipo1 varchar(100),
Tipo2 varchar(100),
total int,
salud int,
ataque int,
defensa int,
ataque_especial int,
defensa_especial int,
velocidad int,
generacion int,
legendary varchar(100),
primary key (Nombre)
)
select * from pokemon

create table movimiento(
codigo varchar(100),
nombre varchar(100),
descripcion varchar(100),
tipo varchar(100),
)

create table entrenadores(
identificador varchar(100),
nombre varchar(100),
usuario varchar(100),
contrasena varbinary(200),
primary key(identificador)
)

create table identificacion_entrenador(
identificador varchar(100),
provincia varchar(100),
canton varchar(100),
distrito varchar(100),
telefono varchar(100),
correo varchar(100),
sitio_web varchar(100),
ubicacion varchar(100),
foreign key (identificador) references entrenadores (identificador)
)

create table movimiento_entrenador(
ID_poke varchar(100),
identificador_entrenador varchar(100),
codigo_movimiento varchar(100)
)

create table estado_pokemon(
id varchar(100),
nombre varchar(100),
estado varchar(100)
)

create table bitacora(
fecha varchar(100),
id varchar(100),
descripcion varchar(500)
)

create table registro_usuario(
nombre varchar(100),
cedula varchar(100),
usuario varchar(100),
contrasena varbinary(100),
primary key(cedula)
)

create table identifiacion_cliente(
cedula varchar(100),
provincia varchar(100),
canton varchar(100),
distrito varchar(100),
telefono varchar(100),
correo varchar(100),
sitio_web varchar(100),
ubicacion varchar(100),
foreign key (cedula) references registro_usuario (cedula)
)
